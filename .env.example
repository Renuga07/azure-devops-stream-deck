# Azure DevOps Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Azure DevOps Organization Settings
# Your organization URL (e.g., https://dev.azure.com/mycompany)
AZURE_DEVOPS_ORG_URL=https://dev.azure.com/YOUR_ORGANIZATION

# Your project name within the organization
AZURE_DEVOPS_PROJECT_NAME=YOUR_PROJECT_NAME

# Authentication
# Personal Access Token with appropriate permissions:
# Required permissions:
# - Build (Read)
# - Code (Read) - if checking associated commits
# - Project and Team (Read)
# Generate at: https://dev.azure.com/YOUR_ORGANIZATION/_usersSettings/tokens
AZURE_DEVOPS_PAT=YOUR_PERSONAL_ACCESS_TOKEN

# Pipeline Configuration
# The numeric ID of the pipeline to monitor
AZURE_DEVOPS_PIPELINE_ID=YOUR_PIPELINE_ID

# Human-readable name for the pipeline (optional)
AZURE_DEVOPS_PIPELINE_NAME=YOUR_PIPELINE_NAME

# Optional: Test Configuration
# Set to true to enable test mode (uses mocked data when appropriate)
AZURE_DEVOPS_TEST_MODE=true

# API version to use (default: 7.0)
AZURE_DEVOPS_API_VERSION=7.0

# Polling interval in milliseconds (default: 30000 = 30 seconds)
AZURE_DEVOPS_POLLING_INTERVAL=30000

# Optional: Specific endpoints for testing
# Base URL for API calls (constructed from ORG_URL and PROJECT_NAME if not provided)
AZURE_DEVOPS_API_BASE_URL=https://dev.azure.com/YOUR_ORGANIZATION/YOUR_PROJECT/_apis

# Builds endpoint path
AZURE_DEVOPS_BUILDS_ENDPOINT=/build/builds

# Pipelines endpoint path
AZURE_DEVOPS_PIPELINES_ENDPOINT=/pipelines