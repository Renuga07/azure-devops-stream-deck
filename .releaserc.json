{
  "branches": ["master"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "npm run build && npx streamdeck pack com.sshadows.azure-devops-info.sdPlugin"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "com.sshadows.azure-devops-info.streamDeckPlugin",
            "name": "azure-devops-stream-deck-${nextRelease.version}.streamDeckPlugin",
            "label": "Stream Deck Plugin v${nextRelease.version}"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "package-lock.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}