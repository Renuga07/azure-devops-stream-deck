{
    "name": "azure-devops-stream-deck",
    "version": "1.0.0",
    "description": "Stream Deck plugin for displaying Azure DevOps pipeline status and build information",
    "author": "SShadowS",
    "license": "MIT",
    "homepage": "https://github.com/SShadowS/azure-devops-stream-deck#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SShadowS/azure-devops-stream-deck.git"
    },
    "bugs": {
        "url": "https://github.com/SShadowS/azure-devops-stream-deck/issues"
    },
    "keywords": [
        "stream-deck",
        "elgato",
        "azure-devops",
        "pipeline",
        "build-status",
        "ci-cd"
